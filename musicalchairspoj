//Musical Chair - Hadrian
#include <cstdio>
#include <cstdlib>
#include <iostream>
using namespace std;

 
int main()
{
    long n, d, w;
 
    while (1) 
    {
        scanf("%ld %ld", &n, &d);
        if (n == 0 && d == 0) break;        
        for (int i = 1; i < n; i++) 
		      {
            w = (w + d) % (i + 1);
        }
        printf("%ld %ld %ld\n", n, d, w + 1);
        w = 0;
    }
    return 0;
}
